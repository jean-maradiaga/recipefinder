<!DOCTYPE html>
<html>
  <head>
    <title>Recipefinder - BETA</title>

    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.png' %>
  </head>


<!-- BODY START -->
<body id="page">

  <!-- Page Content -->
  <div class="page-wrapper">

  <!-- Main Header -->
  <header class="main-header">


    <!-- Search Form -->

    <%= form_tag recipes_index_path, method: :get, id: 'search', :class => 'main-search-form' do %>
      <div class="container">
        <div class="row">
          <div class="col-lg-18 col-lg-offset-3 col-md-20 col-md-offset-2">
            <div class="form-content">
              <div class="input-line">
              <%= text_field_tag :search , '', placeholder: 'What is thy bidding my master?', :required => true, 
                                 :class => 'form-input check-value' %>
              </div>
              <span class="close-form-toggle"></span>
            </div>
          </div>
        </div>
      </div>

    <% end %>

    <!-- Header Content -->
