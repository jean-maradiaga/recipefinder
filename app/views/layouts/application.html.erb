                    <ul>
                      <li><%= link_to 'Alcoholic', recipes_index_path(search: "Beer, Wine, Vodka, Whisky") %></li>
                      <li><%= link_to 'Non alcoholic', recipes_index_path(search: "Drinks, Smoothie") %></li>
                      <li><%= link_to 'Seasonal', recipes_index_path(search: "Drink, Halloween, Christmas, Pumpking") %></li>
