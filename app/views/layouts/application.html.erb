                      <li><%= link_to 'Bucatini', recipes_index_path(search: "Bucatini") %></li>
                      <li><%= link_to 'Capellini', recipes_index_path(search: "Capellini") %></li>
                      <li><%= link_to 'Spaghetti', recipes_index_path(search: "Spaghetti") %></li>
                    </ul>
                  </li>
                  <li class="menu-item-has-children">
                    <%= link_to 'Soup', recipes_index_path(search: "Soup") %>
