                  <%= link_to 'Logout', logout_path, :method => :delete %>
                <% else %>
                  <%= link_to 'Login', login_path%>
                <% end %>
              </li>
            </ul>
          </nav>

          <!-- START MOBILE SEARCH FORM -->

          <%= form_tag recipes_index_path, method: :get, id: 'search', :class => 'search-form mobile-search-form' do %>
            <i class="form-icon icon-search3"></i>
                    <%= text_field_tag :search , '', placeholder: 'Search', :required => true, 
                                       :class => 'form-input check-value' %>
          <% end %>

          <!-- END SEARCH FORM -->

          <!-- SOCIAL  -->

          <ul class="clean-list social-platforms">
            <li>
              <a href="https://www.facebook.com/" target="_blank">
