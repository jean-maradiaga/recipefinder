<p id="notice"><%= notice %></p>

<h1>Listing Courses Menus</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Day</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_menus.each do |courses_menu| %>
      <tr>
        <td><%= courses_menu.course_name %></td>
        <td><%= courses_menu.day %></td>
        <td><%= courses_menu.menu %></td>
        <td><%= link_to 'Show', courses_menu %></td>
        <td><%= link_to 'Edit', edit_courses_menu_path(courses_menu) %></td>
        <td><%= link_to 'Destroy', courses_menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

