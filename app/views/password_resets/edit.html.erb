<!-- Contact Area -->
<h2 class="section-title dark">CHANGE PASSWORD</h2>
<section class="section section-contact">
  <div class="row row-fit">
    <div class="col-md-12 centered">
      <div class="contact-area-block">


	<!-- LOGIN FORM -->
	<%= form_for(@user, url: password_reset_path(params[:id]), :html => {:class => "contact-form"} )do |f| %>

		  <%= hidden_field_tag :email, @user.email %>

          <label class="input-line">
          <%= f.text_field :password, class: 'form-input check-value'  %>
          <span class="placeholder">Password</span>
          <i class="form-icon icon-key2"></i>
          </label>

          <label class="input-line">
          <%= f.password_field :password_confirmation, class: 'form-input check-value'  %>
          <span class="placeholder">Confirmation</span>
          <i class="form-icon icon-key3"></i>
          </label>


		  <%= f.submit "Change", :class => 'btn aux-btn' %>

    <% end %>
	<!-- END LOGIN FORM  -->

	<!-- CONCTACT INFO  -->
		<div class="contact-blocks">
		  <div class="row row-fit">
		    <div class="col-sm-8">
		      <div class="contact-block">
		        <span class="title">Phone</span>
		        <p class="body">(+506) 8817-6579</p>
		      </div>
		    </div>
		    <div class="col-sm-8">
		      <div class="contact-block">
		        <span class="title">Email</span>
		        <p class="body">sunshine-on-rails@gmail.com</p>
		      </div>
		    </div>
		    <div class="col-sm-8">
		      <div class="contact-block">
		        <span class="title">Address</span>
		        <p class="body">CR, San Jose, Curridabat</p>
		      </div>
		    </div>
		  </div>
		</div>

      </div>
    </div>
  </div>
</section>
